<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/preload_Interstitial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preloaded Interstitial"/>

            <Button
                android:id="@+id/regular_Interstitial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Regular Interstitial"/>
            <Button
                android:id="@+id/counter_Interstitial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Counter Interstitial"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/banner_container"/>



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/native_small"/>


            <FrameLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/native_big"/>

            <FrameLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/native_medium"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>